<%= form_with(model: kitten) do |form| %>
  <% if kitten.errors.any? %>
    <div class="errors">
      <% kitten.errors.each do |error| %>
        <p><%= error.full_message %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :age %>
    <%= form.number_field :age, required: true %>
  </div>

  <div>
    <%= form.label :cuteness %>
    <%= form.number_field :cuteness, min: 0, max: 100, required: true %>
  </div>

  <div>
    <%= form.label :softness %>
    <%= form.number_field :softness, min: 0, max: 100, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>